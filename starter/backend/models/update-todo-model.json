{
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "pattern": "^[a-zA-Z0-9 ]+$"
      },
      "dueDate": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "done": {
        "type": "boolean"
      }
    },
    "required": ["name"],
    "additionalProperties": false
}